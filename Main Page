from tkinter import *
from tkinter.filedialog import asksaveasfilename, askopenfile
from PIL import ImageTk,Image
from random import randint

def createopen():

    def saveas():
        t = str(typesomething.get())
        savelocation = asksaveasfilename()
        file1=open(savelocation, "w+")
        file1.write(t)
        file1.close()
        typesomething.delete(0, END)
        makeanother()

    def deletework():
        typesomething.delete(0, END)

    def makeanother():

        def closeboth():
            question.destroy()
            something.destroy()

        question = Toplevel()
        question.title("")
        question.geometry("250x100")
        success = Label(question,text="you have created a file!")
        success.grid(row=0,column=0,rowspan=2)
        ask = Label(question,text="would you like to create another?")
        ask.grid(row=1,column=0,rowspan=2)
        opt1 = Button(question,text="Yes",command=question.destroy)
        opt1.grid(row=2,column=0)
        opt2 = Button(question,text="No",command=closeboth)
        opt2.grid(row=2,column=1)
    
    something = Tk()
    something.title("File Creator")
    something.geometry("800x500")

    bad = Button(something,text="Discard",command=deletework)
    bad.grid(row=0,column=1)
    good = Button(something,text="Save",command=saveas)
    good.grid(row=0,column=2)
    ready = Button(something,text="Publish")
    ready.grid(row=0,column=3)

    instructions1 = Label(something,text="feel free to write")
    instructions1.grid(row=1,column=0)
    typesomething = Entry(something)
    typesomething.grid(row=1,column=1)

def viewopen():
    gallery = Tk()
    gallery.title("Text From Chosen File")
    gallery.geometry("800x500")

    filei = askopenfile(mode="r")
    remember = filei.readlines()
    filei.close()
    l1 = Label(gallery,text=remember).pack()

def landingpage():

    def change():
        global rng
        global words
        rng = randint(1,10)
        print(rng)
        if rng == 1:
            words = "big and lazy" + " (click again to change)"
        else:
            words = "quote" + str(rng) + " (click again to change)"
        quote.config(text=words)

    landing = Tk()
    landing.title("Home")
    landing.geometry("850x330")

    words = "click to see quote of the day"
    rng = randint(1,10)

    leftframe = Frame(landing,width=300,height=300)
    leftframe.grid(row=0,column=0)
    createbutton = Button(leftframe,text="CREATE",width="45",height="4",font=("Calibri", 13),command=createopen)
    createbutton.pack()
    editbutton = Button(leftframe,text="EDIT",width="45",height="4",font=("Calibri", 13))
    editbutton.pack()
    viewbutton = Button(leftframe,text="VIEW",width="45",height="4",font=("Calibri", 13),command=viewopen)
    viewbutton.pack()
    otherbutton = Button(leftframe,text="OTHER",width="45",height="4",font=("Calibri", 13))
    otherbutton.pack()
    quitbutton = Button(leftframe,text="QUIT",width="45", height="4",font=("Calibri", 13))
    quitbutton.pack()

    spacing = Frame(landing,width=25)
    spacing.grid(row=0,column=1)

    visual = Frame(landing,borderwidth = 1.5, relief=RAISED, width=400,height=150)
    visual.grid(row=0, column=2)
    can = Canvas(visual,height=150,width=200)
    can.grid(row=0,column=0)
    myimage = Image.open("/Users/hewitt.ho/Documents/Everything/School/IMG_7995.JPG")
    myimage = myimage.resize((200, 150), Image.ANTIALIAS)
    myimg = ImageTk.PhotoImage(myimage)
    can.create_image(0, 0, image=myimg, anchor = NW)
    quote = Button(visual,text=words,command=change)
    quote.grid(row=0,column=1)

    landing.mainloop()

landingpage()
